/* pages/index/index.wxss */
.page-container{
  background-color: #f5f5f5;
}
.topics-item{
  position: relative;
  display: flex;
  padding: 30rpx;
  background-color: #fff;
  line-height: 40rpx;
  border-bottom: 1px solid #e4e4e4;
}
.topics-item .topics-avatar{
  flex:none;
  width:80rpx;
  height: 80rpx;
  border-radius: 4px;
  margin-right: 8px;
  background-color: #f5f5f5;
}
.topics-item .topics-username{
  font-size: 13px;
  color: #999;
}

.topics-item .topics-title{
  font-size: 14px;
  color: #333;
}
