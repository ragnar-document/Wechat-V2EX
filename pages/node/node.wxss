/* pages/node/node.wxss */
.page-container{
  padding: 60rpx 30rpx;
  background-color: #fff;
}
.node-title{
  line-height: 60rpx;
  font-size: 22px;
  font-weight: 600;
  color: #333;
}
.node-description{
  font-size: 12px;
  color: #666;
  margin-bottom: 60rpx;
}
.node-container{
  display: flex;
  flex-wrap: wrap;
}
.node-item{
  display: inline-block;
  padding: 0 30rpx;
  line-height: 70rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  font-size: 14px;
  color: #333;
  border: 1px solid #333;
}
.node-item_hover{
  background-color: #333;
  color: #fff;
}